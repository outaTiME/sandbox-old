extends box_small

block title
  title Log In &#8212; Sandbox

append styles
  link(rel="stylesheet", href="/css/login.css")

append scripts
  script(src="/js/login" + (debug === true ? ".js" : ".min.js"))

append box
  .login
    h2 Log In
    hr.soften
    - if ('' !== errorClass)
      .alert.alert-error
        //-a.close(data-dismiss="alert") x
        strong Oh snap!&nbsp;
        | Error found while trying to authenticate user.
    form(action="/login", method='POST')
      fieldset
        div
          .control-group(class=errorClass)
            .controls
              input#email(name="email", type="email", placeholder="Email", value=loginFormFieldValue)
          .control-group(class=errorClass)
            .controls
              input#password(name="password", type="password", placeholder="Password", value=passwordFormFieldValue)
      .submit
        button.btn.btn-primary(type="submit", onclick="$(this).hide();") Sign In
