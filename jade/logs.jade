extends box

block title
  title Logs &#8212; Sandbox

append styles
  link(rel="stylesheet", href="/css/logs.css")

append scripts
  script(src="/js/logs" + (debug === true ? ".js" : ".min.js"))

append box
  table#logs(cellpadding="0", cellspacing="0", border="0", width="100%")
    thead
      tr
        //
          th User
        th Time
        th Module
        th Verb
        th Action
        th Value
    tbody
      each log, i in logs
        tr
          //
            td #{log._user.email}
          td #{m_calendar(log.created)}
          td #{log.module}
          td #{log.verb}
          td #{log.action}
          td #{JSON.stringify(log.value)}

