extends box

block title
  title Logs &#8212; Sandbox

append styles
  link(rel="stylesheet", href="/css/logs.css")

append scripts
  script(src="/js/logs" + (debug === true ? ".js" : ".min.js"))

append box
  table#logs(cellpadding="0", cellspacing="0", border="0", width="100%")
    thead
      tr
        //
          th User
        th Time
        th Module
        th Action
        th Query
        th(style="text-align: center;") Verb
        th(style="text-align: center;") Response
    tbody
      each log, i in logs
        tr
          //
            td #{log._user.email}
          td
            span(data-livestamp=m_timestamp(log.created))
          td #{log.module}
          td #{log.action}
          td #{log.query}
          td(style="text-align: center;") #{log.verb}
          td(style="text-align: center;")
            - if (log.response)
              a(data-toggle="modal", href="#" + log._id)
                i.icon-share
              //
              div.modal.hide(id=log._id)
                div(class="modal-header")
                  button(type="button", class="close", data-dismiss="modal") Ã—
                  h3 Response
                div.modal-body
                  pre
                    code(class="json") #{JSON.stringify(log.response, null, '  ')}
                div.modal-footer
                  a.btn(href="#", data-dismiss="modal") Close
